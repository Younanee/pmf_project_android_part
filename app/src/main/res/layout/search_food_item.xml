<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="96dp">
    <LinearLayout
        android:id="@+id/search_food_item_btn"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_gravity="center"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:id="@+id/search_food_item_url_iv"
            android:layout_width="64dp"
            android:layout_height="64dp" />
        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="16dp"
                android:id="@+id/search_food_item_name_tv"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="음식 이름"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/search_food_item_percent_tv"
                android:text="일치율 "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/search_food_item_name_tv"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:gravity="bottom"/>
            <!--<TextView-->
                <!--android:id="@+id/search_food_item_star_tv"-->
                <!--android:text="선호도 "-->
                <!--android:layout_marginRight="16dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@id/search_food_item_name_tv"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_alignParentBottom="true"-->
                <!--android:layout_marginBottom="16dp"-->
                <!--android:gravity="bottom"/>-->
            <View
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e2e3e3">
            </View>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>