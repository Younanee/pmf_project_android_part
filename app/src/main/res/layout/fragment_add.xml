<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_above="@id/add_carmera_btn"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:text="식재료 추가"
            android:gravity="left|center"
            android:layout_marginHorizontal="16dp"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
        <LinearLayout
            android:background="?android:selectableItemBackground"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/add_categories_btn"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="left|center"
                    android:layout_marginHorizontal="16dp"
                    android:text="카테고리"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/add_categories_tv"
                    android:gravity="left|center"
                    android:layout_marginHorizontal="16dp"
                    android:text="#클릭해주세요"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e2e3e3">
        </View>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/add_categories_aaaaa"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:gravity="left|center"
                    android:layout_marginHorizontal="16dp"
                    android:text="식재료 명"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <android.support.design.widget.TextInputLayout
                    android:layout_marginHorizontal="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">
                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#e2e3e3">
        </View>
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/add_carmera_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center">

        <ImageView
            android:id="@+id/add_carmera_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_camera_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_carmera_iv"
            android:layout_centerInParent="true"
            android:text="영수증 인식" />
    </RelativeLayout>

</RelativeLayout>