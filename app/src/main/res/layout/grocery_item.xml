<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/grocery_item_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/grocery_item_info_btn"
                android:background="?android:selectableItemBackground"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:gravity="center">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="left|center"
                            android:layout_marginHorizontal="16dp"
                            android:text="카테고리"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/grocery_item_category_tv"
                            android:gravity="left|center"
                            android:layout_marginHorizontal="16dp"
                            android:text="#카테고리"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="left|center"
                            android:layout_marginHorizontal="16dp"
                            android:text="식재료명"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/grocery_item_name_tv"
                            android:gravity="left|center"
                            android:layout_marginHorizontal="16dp"
                            android:text="식재료"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/grocery_item_remove_btn"
                android:background="?android:selectableItemBackground"
                android:layout_gravity="center"
                android:src="@drawable/ic_remove_black_36dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="16dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>